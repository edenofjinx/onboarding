<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="onboarding_tab" translate="label" sortOrder="10">
            <label>Onboarding</label>
        </tab>
        <section id="onboarding_settings" translate="label" sortOrder="150" showInDefault="1">
            <class>separator-top</class>
            <label>Onboarding settings</label>
            <tab>onboarding_tab</tab>
            <resource>Onboarding_Submenu::menu_settings</resource>

            <group id="general" translate="label" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Onboarding main settings</label>
                <field id="text" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Onboarding text</label>
                    <validate>required-entry</validate>
                </field>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
