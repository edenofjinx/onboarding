<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Customer\Api\Data\CustomerInterface">
        <attribute code="new_onboarding_name" type="string">
            <resources>
                <resource ref="Emotion_Onboarding::view_extensions"/>
            </resources>
            <join reference_table="new_onboarding_data" reference_field="customer_entity_id"
                  join_on_field="entity_id">
                <field>new_onboarding_name</field>
            </join>
        </attribute>
        <attribute code="onboarding_lastname" type="string">
            <resources>
                <resource ref="Emotion_Onboarding::view_extensions"/>
            </resources>
            <join reference_table="new_onboarding_data" reference_field="customer_entity_id"
                  join_on_field="entity_id">
                <field>onboarding_lastname</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
